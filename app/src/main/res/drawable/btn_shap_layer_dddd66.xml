<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <layer-list>
            <item android:left="3dp" android:top="3dp">
                <shape>
                    <solid android:color="#10ffff66"/>
                    <size
                        android:width="120dp"
                        android:height="70dp"/>
                    <corners android:radius="45dp"/>
                </shape>
            </item>

            <item android:bottom="3dp" android:right="3dp">
                <shape>
                    <solid android:color="@color/col_dddd66"/>
                    <size
                        android:width="120dp"
                        android:height="70dp"/>
                    <corners android:radius="45dp"/>
                </shape>
            </item>
        </layer-list>
    </item>


    <item android:state_pressed="true">
        <layer-list>
            <item android:left="3dp" android:top="3dp">
                <shape>
                    <solid android:color="#63ffff66"/>
                    <size
                        android:width="120dp"
                        android:height="70dp"/>
                    <corners android:radius="45dp"/>
                </shape>
            </item>
            <item android:bottom="3dp" android:right="3dp">
                <shape>
                    <solid android:color="@color/col_dddd66"/>
                    <size
                        android:width="120dp"
                        android:height="70dp"/>
                    <corners android:radius="45dp"/>
                </shape>
            </item>
        </layer-list>
    </item>


    <item>
        <layer-list>
            <item android:left="3dp" android:top="3dp">
                <shape>
                    <solid android:color="#23ffff66"/>
                    <size
                        android:width="120dp"
                        android:height="70dp"/>
                    <corners android:radius="45dp"/>
                </shape>
            </item>
            <item android:bottom="3dp" android:right="3dp">
                <shape>
                    <solid android:color="@color/col_dddd66"/>
                    <size
                        android:width="120dp"
                        android:height="70dp"/>
                    <corners android:radius="45dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
