<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/order_bg_color"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="6dp"
        android:layout_weight="1"
        android:fadeScrollbars="false"
        android:paddingStart="56dp"
        android:paddingTop="30dp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbarThumbVertical="@mipmap/bg_scrollbar"
        android:scrollbarTrackVertical="@mipmap/bg_scrollbar_2"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="50dp">

            <include
                android:id="@+id/debt_about"
                layout="@layout/debt_about"
                android:visibility="gone" />

            <include
                android:id="@+id/bill_about"
                layout="@layout/bill_about" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="56dp"
        android:paddingEnd="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="100dp">

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/total"
                android:textColor="@color/font_black"
                android:textSize="43sp" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/count"
                android:textColor="@color/font_black"
                android:textSize="43sp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tv_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:text="@string/yuan"
                android:textAlignment="textEnd"
                android:textColor="@color/col_ff7800"
                android:textSize="73sp" />

            <TextView
                android:id="@+id/tv_final_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21.2"
                android:textColor="@color/col_ff7800"
                android:textSize="83sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_coupon_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coupon"
                android:textAlignment="textEnd"
                android:textColor="@color/col_ff7800"
                android:textSize="28sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="@string/yuan"
                android:textColor="@color/col_ff7800"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tv_total_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/col_ff7800"
                android:textSize="28sp" />

        </LinearLayout>

        <Button
            android:id="@+id/confirm_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="480dp"
            android:layout_height="95dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/btn_shap_layer_e9661b"
            android:contentDescription="@string/refresh"
            android:gravity="center"
            android:text="@string/confirm_goods_list"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_zero_goods_open_door3"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="480dp"
            android:layout_height="95dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/btn_shap_layer_e9661b"
            android:clickable="false"
            android:gravity="center"
            android:text="@string/zero_goods_open_door3"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_null_goods_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="80dp"
            android:gravity="center"
            android:minHeight="120dp"
            android:text="@string/recognized_null_tips"
            android:textColor="@color/font_black"
            android:textSize="36sp" />

    </LinearLayout>

</LinearLayout>
